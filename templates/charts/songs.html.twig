<div data-page="songs" data-user-id="{{user.id|default('null')}}" data-period="{{period}}">
    <div class="tab-group">
	<a
	    hx-get="/charts/songs/{{ period }}/{{ user.id|default }}"
	    hx-trigger="click"
	    hx-target="#main-pane"
	    class="tab-item active">
	        Top Songs
	</a>
	<a
	    hx-get="/charts/artists/{{ period }}/{{ user.id|default }}"
	    hx-trigger="click"
	    hx-target="#main-pane"
	    class="tab-item">
	        Top Artists
	</a>
    </div>
    <ul class="list-group">
        {% for i in chart.items %}
            <li class="list-group-item">
                {% if i.track.artists %}
                    {% set firstArtist = i.track.artists|first %}
                    <img class="img-circle media-object pull-left"
		         src="{{ firstArtist.smallestImage.url| default("#")}}"
                         width="48"
                         height="48">
                {% endif %}
                <div class="media-body" style="float: left">
		    <a href="/charts/track/{{ i.track.id }}/{{ period }}">
                        <strong title="Track name">{{ i.track.name }}</strong>
		    </a>
                    <p title="Artists">
                        {% for a in i.track.artists %}
                            {{ a.name }}
                            {% if i.track.artists|length > 0 and loop.last == false %},{% endif %}
                        {% endfor %}
                    </p>
                </div>
                <div style="float: right;">
                    {{ i.numPlays }}
                    <a href="https://open.spotify.com/track/{{ i.track.spotifyId }}"
                       target="_blank"
                       style="color: black">
                        <span class="icon icon-play"></span>
                    </a>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
